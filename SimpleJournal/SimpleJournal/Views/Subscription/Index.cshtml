@model IEnumerable<SimpleJournal.Models.Subscription>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Follower)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Follower)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SubscriptionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SubscriptionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SubscriptionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
